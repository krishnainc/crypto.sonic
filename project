#include "stdafx.h"
#include <iostream>
#include <fstream>
#include <iomanip>
#include <windows.h>
using namespace std;

//function to hold minor displays
void display(int insid,int course)
{
	cout <<endl<<endl<< "INSTRUCTOR NUMBER :" << insid << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "COURSE NUMBER :" << course << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "AVERAGES :" << endl << endl;
	Beep(1000, 1000);
	Sleep(500);
}

//function to hold calculations and major displays
void average(double count, double count1, double count2, double count3, double count4,double rows) 
{
	double sum = count / rows;
	double sum1 = count1 / rows;
	double sum2 = count2 / rows;
	double sum3 = count3 / rows;
	double sum4 = count4 / rows;
	double inss = 0.15*sum + 0.23*sum1 + 0.08*sum2 + 0.32*sum3 + 0.22*sum4;

	cout << "QUESTION 1 :" << " " << sum << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "QUESTION 2 :" << " " << sum1 << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "QUESTION 3 :" << " " << sum2 << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "QUESTION 4 :" << " " << sum3 << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "QUESTION 5 :" << " " << sum4 << endl;
	Beep(1000, 1000);
	Sleep(500);
	cout << "INSTRUCTOR AVERAGE :" << inss << endl;
	Beep(1000, 1000);
	Sleep(500);
}

int main()
{
	double rows;
	char rep1, rep2, rep3, rep4, rep5;
	double q, w, e, r, t;
	double count = 0;
	double count1 = 0;
	double count2 = 0;
	double count3 = 0;
	double count4 = 0;
	double insid;
	double course;
	
	//prompt user to enter number of participants
	cout << "How many Participants ? :" << endl;
	cin >> rows;

	//create a file to save the input data which is coded
	ofstream myfile;
	myfile.open("k.txt");

	//loop iteration for data insertion
    for (int i = 0; i < rows; i++) {

		cout << "Enter Instructor ID :" << endl;
		cin >> insid;
		
		cout << "Enter Course ID :" << endl;
		cin >> course;

		cout << "Enter Answer 1 :" << endl;
		cin >> rep1;
        if (rep1 == 'E') {
			q = 4;
		}
		else if (rep1 == 'G') {
			q = 3;
		}
		else if (rep1 == 'A') {
			q = 2;
		}
		else if (rep1 == 'P') {
			q = 1;
		}
		else if (rep1 == 'U') {
			q = 0;
		}
        count = count + q;


		cout << "Enter Answer 2 :" << endl;
		cin >> rep2;
        if (rep2 == 'E') {
			w = 4;
		}
		else if (rep2 == 'G') {
			w = 3;
		}
		else if (rep2 == 'A') {
			w = 2;
		}
		else if (rep2 == 'P') {
			w = 1;
		}
		else if (rep2 == 'U') {
			w = 0;
		}
        count1 = count1 + w;


		cout << "Enter Answer 3 :" << endl;
		cin >> rep3;
        if (rep3 == 'E') {
			e = 4;
		}
		else if (rep3 == 'G') {
			e = 3;
		}
		else if (rep3 == 'A') {
			e = 2;
		}
		else if (rep3 == 'P') {
			e = 1;
		}
		else if (rep3 == 'U') {
			e = 0;
		}
		count2 = count2 + e;


        cout << "Enter Answer 4 :" << endl;
		cin >> rep4;
        if (rep4 == 'E') {
			r = 4;
		}
		else if (rep4 == 'G') {
			r = 3;
		}
		else if (rep4 == 'A') {
			r = 2;
		}
		else if (rep4 == 'P') {
			r = 1;
		}
		else if (rep4 == 'U') {
			r = 0;
		}
        count3 = count3 + r;


        cout << "Enter Answer 5 :" << endl;
		cin >> rep5;
		if (rep5 == 'E') {
			t = 4;
		}
		else if (rep5 == 'G') {
			t = 3;
		}
		else if (rep5 == 'A') {
			t = 2;
		}
		else if (rep5 == 'P') {
			t = 1;
		}
		else if (rep5 == 'U') {
			t = 0;
		}
        count4 = count4 + t;

		//data is saved in file 
		myfile << insid <<" "<< course<<" "<< rep1 <<" "<< rep2 << " "<< rep3 <<" "<< rep4 <<" "<<rep5<< endl;
}
        //prompt user telling that file is saved
        cout << "Your Input Data is Saved in File...Please Check Your Directory" << endl;
        Beep(1000, 1000);
        Sleep(500);

		//function call to display all the elements
        display(insid,course);
	    average(count, count1, count2, count3, count4, rows);

		//prompt user if they wanna view the input data
	    cout <<endl<<endl<< "Do You Wanna View the Input List ?" << endl;
	    char res;
	    cin >> res;
	    if (res == 'Y' || res == 'y') {
		for (int i = 0; i < rows; i++) {
        cout << endl << insid << " " << course << " " << rep1 << " " << rep2 << " " << rep3 << " " << rep4 << " " << rep5 << endl;
		}
		}
	    else if (res == 'N' || res == 'n') {
		cout << endl << "Thank You...Have a pleasent day ahead" << endl;
		Sleep(1000);

		//beeps thrice and program clears
		for (int vb = 0; vb < 3; vb++) {
	    Beep(800, 800);
		}
        system("cls");
	    }
	    return 0;
}

