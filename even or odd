#include "stdafx.h"
#include<iostream>
#include<stdio.h>
#include<string>

using namespace std;


int main()
{
	char c;
	int a;
	int b;
	
	do {
		printf("enter a number:");
		cin >> a;
		b = a % 2;

		if (b == 0) {
			printf("even");
		}
		else {

			printf("odd");
		}
		printf("do you wanna continue?");
			cin >> c;
		
	} while (c == 'y' || c == 'Y');




    return 0;
}
