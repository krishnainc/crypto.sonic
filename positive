#include "stdafx.h"
#include<iostream>
#include<cmath>
#include<iomanip>
#include<string>
using namespace std;


int main()
{
	
	int e, r;
	cout << "enter numbers" << endl;
	cin >> e;
	cin >> r;

	if (e >= 0 && r >= 0){
		cout << "both is  positive number" << endl;
	}
	else if (e >= 0 && r < 0) {
		cout << "one is a positive number and one is a negative number" << endl;
	}

	else if(e<0 && r >= 0 ){
		cout << "one is a positive number and one is a negative number" << endl;

	}
	else if(e < 0 && r < 0) {
		cout << "both is negative number" << endl;
	}



	

    return 0;
}
